
FROM node:14
ENV NODE_ENV production
COPY dist /app
COPY package*.json /
COPY app.js /
WORKDIR /
RUN npm ci --production
EXPOSE 80
CMD node dist/index.js

FROM node:14-alpine
RUN mkdir -p /home/node/app/node_modules && chown -R node:node /home/node/app
WORKDIR /home/node/app
COPY package*.json ./
USER node
RUN npm install 
COPY --chown=node:node . .
EXPOSE 80
CMD [ "node", "app.js" ]